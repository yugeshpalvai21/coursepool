<div class="col">
  <div class="card">
    <div class="card-header">
      <%= user.email %>
    </div>
    <div class="card-body">
      <h6>Courses Created - <%= user.courses.count  %></h6>
    </div>
    <div class="card-footer">
      <p>Current Ip - <%= user.current_sign_in_ip.to_s %></p>
      <p>Last Sign In Ip - <%= user.last_sign_in_ip.to_s %></p>
      <p>Last Sign In Ip - <%= user.current_sign_in_at %></p>
      <p>Last Sign In Ip - <%= user.last_sign_in_at %></p>
      <p>No Of Logins - <%= user.sign_in_count %></p>
    </div>
  </div>
</div>